<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstagramClone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <!-- Customize the tab text color -->
        <item name="tabTextColor">@color/tab_text_color</item>

        <!-- Customize the selected tab text color -->
        <item name="tabSelectedTextColor">@color/black</item>

        <!-- Customize the tab indicator color (the line under the selected tab) -->
        <item name="tabIndicatorColor">#0A0A0A</item>
    </style>

    <style name="MyTabLayoutTextStyle">
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:textSize">16sp</item>
        <!-- You can add more text styling attributes here -->
    </style>

    <style name="Theme.InstagramClone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.InstagramClone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.InstagramClone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>